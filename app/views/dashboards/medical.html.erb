<h1>Medical</h1>
<%= current_user.role %>
<% if current_user.identity_file.url.present? %>
  <%= image_tag current_user.identity_file.url, alt: "alttext" %>
<% end %>

<%= link_to 'PropriÃ©taire?', dashboards_owner_path, class: 'btn btn-primary' %>
<div class="container">
  <%= form_tag dashboards_medical_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control flat-search",
      placeholder: "Recherchez la ville de votre Hopital"
    %>
    <%= submit_tag "Rechercher", class: "btn btn-primary" %>
  <% end %>
  <div class="header">
    <h1>Voici la liste des appartements disponibles :</h1>
  </div>
  <div class="flat-container d-flex">
    <div class="flat-list">
      <% @flats.each do |flat| %>
        <div class="card">
          <%= flat.description %>
          <%= flat.flat_type %>
          <%= flat.address %>
        </div>
      <% end %>
    </div>
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-markersHosp="<%= @markersHosp.to_json %>" >
    </div>
  </div>



</div>
