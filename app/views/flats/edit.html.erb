              <div class="carousel-caption d-none d-md-block " >
                <a class="text-blue" href=""><i class="fas fa-plus-circle fa-2x"></i></a>
              </div>
            </div>
            <div class="carousel-item active">
              <div style="background-image:url('https://www.pierre-giraud.com/bootstrap-carrousel-slide-2.jpg');" class="d-block  image-cara"></div>
              <div class="carousel-caption d-none d-md-block text-dark">

              </div>
            </div>
            <div class="carousel-item ">
              <div style="background-image:url('https://www.pierre-giraud.com/bootstrap-carrousel-slide-2.jpg');" class="d-block  image-cara"></div>
              <div class="carousel-caption d-none d-md-block text-dark">

              </div>
            </div>
            <div class="carousel-item">
              <div style="background-image:url('https://www.pierre-giraud.com/bootstrap-carrousel-slide-2.jpg');" class="d-block  image-cara"></div>
              <div class="carousel-caption d-none d-md-block">

              </div>
            </div>
            <div class="carousel-item">
              <div style="background-image:url('https://www.pierre-giraud.com/bootstrap-carrousel-slide-2.jpg');" class="d-block  image-cara"></div>
              <div class="carousel-caption d-none d-md-block">

              </div>
            </div>
